@model SAT_Team_Development.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}



<div class=" container mt-5">
    <br />
    <br />
    <h3 class="text-center text-danger">Delete @Model.EnrollmentId?</h3>

    <dl class="row">
        <div class="offset-4 col-md-4">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnrollmentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ScheduledClass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScheduledClass.InstructorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Email)
            </dd>
        </div>
    </dl>
    
    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="EnrollmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
