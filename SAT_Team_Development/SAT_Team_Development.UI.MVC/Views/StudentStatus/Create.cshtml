@model SAT_Team_Development.DATA.EF.Models.StudentStatus

@{
    ViewData["Title"] = "Create Student Status";
}

<div class="container mt-5">
    <br />
    <br />
    <h3 class="text-center">@ViewData["Title"]</h3>
    <div class="row">
        <div class="offset-4 col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Ssname" class="control-label"></label>
                    <input asp-for="Ssname" class="form-control" />
                    <span asp-validation-for="Ssname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ssdescription" class="control-label"></label>
                    <input asp-for="Ssdescription" class="form-control" />
                    <span asp-validation-for="Ssdescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
