@model SAT_Team_Development.DATA.EF.Models.StudentStatus

@{
    ViewData["Title"] = "Edit " + Model.Ssname;
}



<div class="container mt-5">
    <br/>
    <br/>
<h4>@ViewData["Title"]</h4>
    <div class="row">
        <div class="offset-4 col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Ssid" />
                <div class="form-group">
                    <label asp-for="Ssname" class="control-label"></label>
                    <input asp-for="Ssname" class="form-control" />
                    <span asp-validation-for="Ssname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ssdescription" class="control-label"></label>
                    <input asp-for="Ssdescription" class="form-control" />
                    <span asp-validation-for="Ssdescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
