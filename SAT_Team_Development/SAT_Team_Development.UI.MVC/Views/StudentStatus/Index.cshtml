@model IEnumerable<SAT_Team_Development.DATA.EF.Models.StudentStatus>

@{
    ViewData["Title"]= " Student Status";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container mt-5">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ssname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ssdescription)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ssname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ssdescription)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Ssid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Ssid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Ssid">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}