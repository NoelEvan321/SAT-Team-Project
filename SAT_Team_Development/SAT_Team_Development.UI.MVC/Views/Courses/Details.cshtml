@model SAT_Team_Development.DATA.EF.Models.Course

@{
    ViewData["Title"] = Model.CourseName;
}

<div class="container mt-5">
    <br />
    <br />
    
    <dl class="row">

        <div class="offset-4 col-md-4">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreditHours)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreditHours)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Curriculum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Curriculum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Notes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </div>
    </dl>
</div>
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.CourseId">Edit @Model.CourseName</a> |
    <a asp-action="Index">Back to Courses</a>
</div>
